{{!-- login on image --}}
<div class="parallax-container">
    <div class="parallax"><img src="img/sky-forest.jpg"></div>
    <div class="container">
        <br><br>
        <div class="row">
            <div class="col s12 m4 offset-m4">
                <div class="card">
                    <div class="center card-action green lighten-1 white-text">
                        <h5>TreadLight Login</h5>
                    </div>
                    <form id="loginForm">
                        <div class="card-content">
                            <div class="form-field">
                                <label for="email">Email</label>
                                <input type="text" id="email">
                            </div><br>
                            <div class="form-field">
                                <label for="password">Password</label>
                                <input type="password" id="password">
                            </div><br>
                            <div class="form-field">

                                <p><label>
                                        <input type="checkbox" />
                                        <span>Remember me</span>
                                    </label></p>
                            </form>
                        </div><br>
                        <div class="form-field">
                            <button class="btn-large waves effect waves-dark green" style="width:100%;">Login</button>
                            <a href="/register">Sign up here</a>
                        </div><br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
